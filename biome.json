{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"assist": {
		"actions": {
			"recommended": true
		},
		"enabled": true
	},
	"files": {
		"includes": ["**", "!!**/dist", "!sanity.types.ts", "!schema.json"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
