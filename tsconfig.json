{
	"compilerOptions": {
		"erasableSyntaxOnly": true,
		"module": "nodenext",
		"noEmit": true,
		"rewriteRelativeImportExtensions": true,
		"skipLibCheck": true,
		"target": "esnext",
		"verbatimModuleSyntax": true,
		"strict": true
	},
	"exclude": ["node_modules"],
	"include": ["**/*.ts", "**/*.tsx"]
}
